{
  "name": "@massalabs/gossip-sdk",
  "version": "0.0.1",
  "description": "Gossip SDK for automation, chatbot, and integration use cases",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sw": {
      "types": "./dist/sw.d.ts",
      "import": "./dist/sw.js"
    }
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc && npm run copy:wasm",
    "copy:wasm": "mkdir -p dist/assets/generated/wasm && cp -R src/assets/generated/wasm/* dist/assets/generated/wasm/",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "vitest run test/e2e/",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "keywords": [
    "gossip",
    "messenger",
    "sdk",
    "massa",
    "blockchain"
  ],
  "license": "MIT",
  "devDependencies": {
    "drizzle-kit": "^0.31.1",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  },
  "dependencies": {
    "@massalabs/massa-web3": "^5.3.0",
    "@scure/base": "^2.0.0",
    "@scure/bip39": "^2.0.1",
    "drizzle-orm": "^0.45.1",
    "wa-sqlite": "^1.0.0"
  }
}
